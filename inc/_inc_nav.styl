#navtgl
	display none
	overflow hidden
.open,
.close
	cursor pointer
	position fixed
	top -12px
	left -12px
.open
	z-index 5
	width 80px
	height 80px
	-moz-border-radius 160px
	-webkit-border-radius 160px
	border-radius 160px
	line-height 80px
	font-size .3rem
	background-color #7dd
	color #fff
	transition background-color .6s, transform .6s
	text-align center
#navtgl:checked + .open
	background-color #822
	transform translateX(250px)
.close
	pointer-events none
	z-index 4
	width 100%
	height 100%
	transition background-color .6s
	top 0
	left 0
#navtgl:checked ~ .close
	pointer-events auto
	background rgba(0,0,0,0.3)
nav
	z-index 3
	position fixed
	overflow auto
	top 0
	left 0
	width 250px
	height 100%
	padding 10px
	background rgba(20,20,160,0.7)
	transform translateX(-100%)
	transition transform .6s
	h1,
	li,
	li>a
		color #fff
	h1
		margin -10px 0 0 -10px
		padding 10px 0 10px 10px
		background rgba(20,20,160,0.9)
	ul
		padding 0
		margin 0
	li
		border-bottom 1px solid #bbb
		font-size .14rem
		line-height 1.4
		&:first-child
			border-top 1px solid #bbb
		a
			display block
			padding 1em 2em
			text-decoration none
			transition background-color .6s
#navtgl:checked ~ nav
	transform translateX(0)









