#posttgl
	display none
	overflow hidden
#postopen,
#postclose
	cursor pointer
	position fixed
	bottom 0
#postopen
	z-index 2
	width 60px
	height 60px
	-moz-border-radius 20px
	-webkit-border-radius 20px
	border-radius 20px
	line-height 60px
	font-size .2rem
	background-color #7dd
	color #fff
	transition all .6s
	text-align center
	&::after
		content "Toot!"
#posttgl:checked + #postopen
	width 80px
	height 80px
	left -12px
	z-index 10
	-moz-border-radius 160px
	-webkit-border-radius 160px
	border-radius 160px
	line-height 80px
	font-size .3rem
	background-color #822
	bottom calc(100% - 68px)
	&::after
		content "Ã—"
#postclose
	pointer-events none
	z-index 1
	width 100%
	height 100%
	transition all .6s
	top 0
	left 0
#posttgl:checked ~ #postclose
	pointer-events auto
	background rgba(0,0,0,0.3)
footer
	z-index 6
	position fixed
	overflow auto
	bottom 0
	width 100%
	height calc(100% - 78px)
	padding 10px
	background rgba(20,20,160,0.7)
	transform translateY(100%)
	transition all .6s
#posttgl:checked ~ footer
	transform translateY(0)